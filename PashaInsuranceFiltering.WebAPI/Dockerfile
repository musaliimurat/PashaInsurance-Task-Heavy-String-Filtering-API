# -------- Build stage --------
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src


COPY . .
# Sln restore
RUN dotnet restore ./PashaInsuranceFiltering.sln

# WebAPI
RUN dotnet publish ./PashaInsuranceFiltering.WebAPI/PashaInsuranceFiltering.WebAPI.csproj \
    -c Release -o /app/publish /p:UseAppHost=false

# -------- Runtime stage --------
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080
COPY --from=build /app/publish ./
ENTRYPOINT ["dotnet", "PashaInsuranceFiltering.WebAPI.dll"]
